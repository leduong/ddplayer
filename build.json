{
  "static": {
    "HTML": {
      "src": "./demo/*.html",
      "dist": "./dist/"
    }
  },
  "js": {
    "plyr.js": {
      "src": "./src/js/plyr.js",
      "dist": "./dist/",
      "formats": ["es", "umd"],
      "namespace": "Plyr"
    },
    "plyr.polyfilled.js": {
      "src": "./src/js/plyr.polyfilled.js",
      "dist": "./dist/",
      "formats": ["es", "umd"],
      "namespace": "Plyr",
      "polyfill": true
    }
  },
  "css": {
    "plyr.css": {
      "src": "./src/sass/plyr.scss",
      "dist": "./dist/"
    }
  },
  "sprite": {
    "plyr.svg": {
      "src": "./src/sprite/*.svg",
      "dist": "./dist"
    }
  }
}
